FROM python:3.11-slim

WORKDIR /app
ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1

COPY services/jarvis-service/requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

COPY services/jarvis-service/app ./app

EXPOSE 8200

CMD ["uvicorn", "app.main_optimized:app", "--host", "0.0.0.0", "--port", "8200"]
