# ==============================================
# CONFIGURACIÓN DE EJEMPLO (Leximetrics IA)
# ==============================================
# Copia este archivo a .env y completa los valores

# 1. BASE DE DATOS
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=leximetrics
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/leximetrics

# 2. AUTHENTICATION
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=generar-con-openssl-rand-base64-32

# 3. URLs DE SERVICIOS
NEXT_PUBLIC_APP_URL=http://localhost:3000
BACKEND_API_URL=http://localhost:3001/api/v1
AI_SERVICE_URL=http://localhost:8000
SCRAPER_SERVICE_URL=http://localhost:8100
JARVIS_BACKEND_URL=http://localhost:8200

# 4. SEGURIDAD INTERNA
SCRAPER_SERVICE_TOKEN=dev-token-123
INTERNAL_SERVICE_TOKEN=dev-token-123

# 5. INTELIGENCIA ARTIFICIAL
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-...
GEMINI_API_KEY=AIza...

# 6. CONFIGURACIÓN J.A.R.V.I.S.
GEMINI_MODEL_NAME=gemini-2.0-flash
JARVIS_TTS_ENABLED=true

# 7. ALMACENAMIENTO (AWS S3)
AWS_S3_BUCKET_NAME=leximetrics-dev
AWS_REGION=sa-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# 8. CREDENCIALES SCRAPER
CLAVE_UNICA_RUT=
CLAVE_UNICA_PASSWORD=
